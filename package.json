{
  "name": "bat-ledger",
  "version": "0.9.0",
  "description": "A BAT micropayments system for users and publishers.",
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "start": "echo use 'npm run start-[ledger|eyeshade]' or 'npm run start-[ledger|eyeshade]-worker'",
    "ledger-server": "./node_modules/.bin/babel-node ledger/server.js",
    "ledger-worker": "./node_modules/.bin/babel-node --optimize_for_size --max_old_space_size=460 --gc_interval=100 ledger/worker.js",
    "start-ledger": "DEBUG=*,-babel,-mongo:*,mongo:queries SERVICE=ledger ./node_modules/.bin/babel-node ledger/server.js",
    "start-ledger-worker": "DEBUG=*,-babel,-mongo:*,mongo:queries SERVICE=ledger ./node_modules/.bin/babel-node --optimize_for_size --max_old_space_size=460 --gc_interval=100 ledger/worker.js",
    "eyeshade-server": "./node_modules/.bin/babel-node eyeshade/server.js",
    "eyeshade-worker": "./node_modules/.bin/babel-node --optimize_for_size --max_old_space_size=460 --gc_interval=100 eyeshade/worker.js",
    "start-eyeshade": "DEBUG=*,-babel,-mongo:*,mongo:queries SERVICE=eyeshade ./node_modules/.bin/babel-node eyeshade/server.js",
    "start-eyeshade-worker": "DEBUG=*,-babel,-mongo:*,mongo:queries SERVICE=eyeshade ./node_modules/.bin/babel-node --optimize_for_size --max_old_space_size=460 --gc_interval=100 eyeshade/worker.js",
    "test": "npm run test-security",
    "test-security": "nsp check",
    "test-api": "ava test/*.api.test.js"
  },
